{% extends 'base.html.twig' %}


{% block title %}Trips index{% endblock %}

{% block body %}
    <h1>Liste des trajets</h1>

    <table class="vehicle-table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Date du trajet</th>
            <th>Départ</th>
            <th>Destination</th>
            <th>Kilométrage</th>
            <th>Unité</th>
            <th>Contexte</th>
            <th>Catégorie</th>
            <th>Description</th>
            <th>Véhicule</th>
            <th>Facturable au Client</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            {% for trip in trips %}
                <tr>
                    <td>{{ trip.id }}</td>
                    <td>{{ trip.tripDate ? trip.tripDate|date('Y-m-d') : '' }}</td>
                    <td>{{ trip.origin }}</td>
                    <td>{{ trip.destination }}</td>
                    <td>{{ trip.mileage }}</td>
                    <td>{{ trip.unit }}</td>
                    <td>{{ trip.context }}</td>
                    <td>{{ trip.category }}</td>
                    <td>{{ trip.description }}</td>
                    <td>
                        {% for vehicle in trip.vehicle %}
                            Vehicle n°{{ loop.index }}{{ vehicle.label }}
                        {% endfor %}
                    </td>
                    <td>{{ trip.billableClient ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_trips_show', {'id': trip.id}) }}">Afficher</a>
                        <a href="{{ path('app_trips_edit', {'id': trip.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
        {% else %}
            {% for trip in trips %}
                <tr>
                    <td>{{ trip.id }}</td>
                    <td>{{ trip.tripDate ? trip.tripDate|date('Y-m-d') : '' }}</td>
                    <td>{{ trip.origin }}</td>
                    <td>{{ trip.destination }}</td>
                    <td>{{ trip.mileage }}</td>
                    <td>{{ trip.unit }}</td>
                    <td>{{ trip.context }}</td>
                    <td>{{ trip.category }}</td>
                    <td>{{ trip.description }}</td>
                    <td>
                        {% for vehicle in trip.vehicle %}
                            Vehicle n°{{ loop.index }}{{ vehicle.label }}
                        {% endfor %}
                    </td>
                    <td>{{ trip.billableClient ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_trips_show', {'id': trip.id}) }}">Afficher</a>
                        <a href="{{ path('app_trips_edit', {'id': trip.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_trips_new') }}"><button class="btnAppPerso">Créer nouveau</button></a>
{% endblock %}