{% extends 'base.html.twig' %}

{% block title %}Expenses index{% endblock %}

{% block body %}
    <h1>Liste des Frais</h1>

    <table class="vehicle-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type de Dépense</th>
                <th>Montant Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.id }}</td>
                <td>{{ expense.expenseType }}</td>
                <td>{{ expense.TotalAmount }}</td>
                <td>
                    <a href="{{ path('app_expenses_show', {'id': expense.id}) }}">Afficher</a>
                    <a href="{{ path('app_expenses_edit', {'id': expense.id}) }}">Modifier</a>
                    <link rel="stylesheet" href="styles.scss">
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_expenses_new') }}"><button class="btnAppPerso">Créer nouveau</button></a>
{% endblock %}
